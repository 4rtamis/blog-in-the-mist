---
import Container from "@components/Container.astro";
import Layout from "@layouts/Layout.astro";
import { CHARACTERS } from "@consts";
---

<Layout title={CHARACTERS.TITLE} description={CHARACTERS.DESCRIPTION}>
  <Container>
    <aside>
      <div class="space-y-12">
        <div class="animate space-y-3">
          <p class="text-xs uppercase tracking-[0.2em] text-black/60">
            City dossiers
          </p>
          <h1 class="text-4xl font-semibold text-black underline decoration-4">
            {CHARACTERS.TITLE}
          </h1>
          <p class="max-w-3xl text-lg text-black">
            {CHARACTERS.DESCRIPTION}
          </p>
        </div>

        <div class="animate space-y-4 rounded-lg border border-black/10 bg-[#f5f1e5] p-6 shadow-black/10">
          <p class="text-xs uppercase tracking-[0.2em] text-black/60">
            Character dossiers
          </p>
          <h2 class="text-3xl font-semibold text-black underline decoration-4">
            Coming soon
          </h2>
          <p class="max-w-2xl text-lg text-black/80">
            We are still assembling these dossiers. Check back soon to meet the characters once this section is ready.
          </p>
        </div>
      </div>
    </aside>
  </Container>
</Layout>
